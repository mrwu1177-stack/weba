    function generateMockBollinger(data) {
      const coins = data?.tickers?.slice(0, 4) || [];
      return coins.map(coin => {
        const price = coin.last || 0;
        const upper = price * 1.05;
        const lower = price * 0.95;
        const position = ((price - lower) / (upper - lower) * 100).toFixed(0);
        const strength = position > 80 ? 'strong-sell' : position < 20 ? 'strong-buy' : '';

        return {
          coin: coin.symbol || 'BTC',
          upper: upper.toFixed(2),
          lower: lower.toFixed(2),
          current: price.toFixed(2),
          position: position + '%',
          signal: position > 80 ? 'å¼ºçƒˆå–å‡º' : position < 20 ? 'å¼ºçƒˆä¹°å…¥' : 'æŒæœ‰',
          strength
        };
      });
    }

